<Window x:Name="GraphViewForm" x:Class="SKT.GraphView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SKT"
        mc:Ignorable="d"
        Title="GraphView" Height="450" Width="800">
    <TabControl x:Name="TabControl">
        <TabItem Header="Bx">
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="800*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="450*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image x:Name="GraphImage" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="750"/>
                <Label x:Name="LabelBx" Content="Bx" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top"/>
                <Label x:Name="LabelX_bx" Content="X" HorizontalAlignment="Left" Margin="757,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.506,0.524"/>
            </Grid>
        </TabItem>
        <TabItem Header="Bz">
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="800*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="450*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image x:Name="GraphImageBz" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="750"/>
                <Label x:Name="LabelBz" Content="Bz" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top"/>
                <Label x:Name="LabelX_bz" Content="X" HorizontalAlignment="Left" Margin="757,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.506,0.524"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
